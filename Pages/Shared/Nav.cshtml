            box-shadow: rgba(33, 35, 38, 0.1) 0px 10px 10px -10px;
    }
    .logo-container {
        width:20%;
        object-fit:cover;
    }
    .left-nav{
        width:50%;
    }
    .right-nav{
        display:flex;
